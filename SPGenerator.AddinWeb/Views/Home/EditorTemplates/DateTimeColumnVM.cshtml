@model SPGenerator.AddinWeb.ViewModels.Home.Column.DateTimeColumnVM

@Html.HiddenFor(m => m.InternalName)
<div class="form-group">
    @Html.Label("", "Typ", new { @class = "control-label col-sm-5" })
    <span class="form-control-static col-sm-7">Data i czas</span>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.GenerateData, new { @class = "control-label col-sm-5" })
    @if (Model.Required)
    {
    <span class="form-control-static col-sm-7">Pole wymagane</span>
    }
    else
    {
    @Html.CheckBoxFor(m => m.GenerateData, new { @style = "vertical-align: middle;" })
    }
</div>
<div class="form-group">
    @Html.LabelFor(m => m.MinValue, new { @class = "control-label col-sm-5" })
    @Html.TextBoxFor(m => m.MinValue, new { @class = "form-control col-sm-7", @type = "datetime"})
</div>
<div class="form-group">
    @Html.LabelFor(m => m.MaxValue, new { @class = "control-label col-sm-5" })
    @Html.TextBoxFor(m => m.MaxValue, new { @class = "form-control col-sm-7", @type = "datetime"})
</div>